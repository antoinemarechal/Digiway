<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ScrollView
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:padding="8dp"
        android:background="@color/blue_overlay" >

        <LinearLayout
            android:id="@+id/event_map_legend"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:showDividers="middle"
            android:divider="@drawable/linear_layout_divider" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_map_legend"
                android:layout_gravity="center"
                android:textStyle="bold" />

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:gravity="center"
        android:layout_gravity="center">

        <include layout="@layout/fragment_google_map"
            tools:context="com.henallux.yetee.EventMapActivity"/>

    </LinearLayout>

</LinearLayout>
